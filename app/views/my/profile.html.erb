<%= form_tag 'update_profile' do -%>
<table>
	<tr>
		<td><%= resource.label :email %></td>
		<td>
			<input type="text" readonly="true" value="<%= current_user.email %>" />
			<%= link_to "修改邮箱地址", :action=> "update_email" %>
		</td>
	</tr>
	<tr>
		<td>手机:</td>
		<td>
			<input type="text" readonly="true" value="<%= current_user.phone %>" />
			<%= link_to "修改手机号码", :action=> "update_phone" %>
		</td>
	</tr>
	<tr>
		<td>性别:</td>
		<td>
			<input type="radio" name="gender" value="男" <%= current_user.gender == "男" ? "checked" : "" %> />男
			<input type="radio" name="gender" value="女" <%= current_user.gender == "女" ? "checked" : "" %> />女
			<input type="radio" name="gender" value="保密" <%= current_user.gender != "男" && current_user.gender != "女" ? "checked" : "" %> />保密
		</td>
	</tr>
	<tr>
		<td>姓名:</td>
		<td><input type="text" name="name" value="<%= current_user.name %>" /></td>
	</tr>
	<tr>
		<td>生日:</td>
		<td>
			<%= select_date current_user.birth, :prompt => {:day => '日', :month => '月', :year => '年'}, :start_year => 2010, :end_year => 1960, :prefix => :birth %>
		</td>
	</tr>
</table>
<input type="submit" value="保存" />
<% end -%>
