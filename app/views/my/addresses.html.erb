<%= render 'my/header' %>
<div id="my_acinfo">
<%= render 'my/userside' %>
	<div id="ac_right">
		<ul id="pd_infomenu">
			<li class="on">我的地址簿</li>
			<li><a href="/my/new_address">添加地址</a></li>
		</ul>
		<div class="clearit"></div>
		<div id="ac_more_detail">
			<table width="100%" cellspacing="0" cellpadding="0" border="0" class="tableinfo">
            	<tbody>
                    <tr bgcolor="#f0f0f0" class="f-black-12-b">
                        <td height="30" width="70">
                            收货人
                        </td>
                        <td width="200">
                            地址
                        </td>
                        <td width="70">
                            邮编
                        </td>
                        <td width="70">
                            电话
                        </td>
                        <td width="65" valign="middle" bgcolor="#f0f0f0" align="center">
                            默认地址
                        </td>
                        <td width="65" valign="middle" bgcolor="#f0f0f0" align="center">
                            操作
                        </td>
                    </tr>
					<% @addresses.each do |address| %>
                    <tr>
                        <td height="30"><a class="f-blue-12" href=""><%= address.name %></a></td>
                        <td><%= address.province %>/<%= address.city %>/<%= address.region %>/<%= address.detail %></td>
                        <td><%= address.zip %></td>
                        <td><%= address.phone %></td>
                        <td><%= address.default ? "是" : "否" %></td>
                        <td>
							<%= link_to '[修改]', :action => :edit_address, :id => address.id, :class=>"f-red-12" %>
							<%= link_to '[删除]', address, :method => :delete, :class=>"f-red-12" %>
						</td>
                    </tr>
					<% end %> 
                </tbody>
			</table>
			<%= paginate @addresses %>
		</div>
	</div>
</div>
<div class="clearit"></div>