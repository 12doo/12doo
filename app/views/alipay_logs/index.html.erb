<%= render 'admin/header' %>
<div id="my_acinfo">
<%= render 'admin/userside' %>
	<div id="ac_right">
		<ul id="pd_infomenu">
			<li class="on">支付宝记录</li>
		</ul>
		<div class="clearit"></div>
		<div id="ac_more_detail">
			<table width="100%" cellspacing="0" cellpadding="0" border="0" class="tableinfo">
            	<tbody>
                    <tr bgcolor="#f0f0f0" class="f-black-12-b">
                        <td width="40" width="70">
                            notify_id
                        </td>
						<td height="30" >
                            notify_type
                        </td>
                        <td width="40">
                            out_trade_no
                        </td>
                        <td width="40">
                            trade_no
                        </td>
                        <td width="40">
                            payment_type
                        </td>
                        <td width="80">
                        	subject
                        </td>
                        <td width="80" valign="middle" bgcolor="#f0f0f0" align="center">
                            trade_status
                        </td>
                    </tr>
					<% @alipay_logs.each do |alipaylog| %>
				 	<tr>
					    <td height="30"><%= link_to alipaylog.notify_id, alipaylog, :class => 'f-red-12' %></td>
					    <td><%= alipaylog.notify_type %></td>
						<td><%= alipaylog.out_trade_no %></td>
						<td><%= alipaylog.trade_no %></td>
						<td><%= alipaylog.payment_type %></td>
						<td><%= alipaylog.subject %></td>
						<td><%= alipaylog.trade_status %></td>
				  	</tr>
					<% end %>
                </tbody>
			</table>
			<%= paginate @alipay_logs %>
		</div>
	</div>
</div>
<div class="clearit"></div>