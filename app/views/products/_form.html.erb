图片地址:<input type="text" name="product[pic]" value="<%= @product.pic %>" /><br />
编号:<input type="text" name="product[sku]" value="<%= @product.sku %>" /><br />
产品名称:<input type="text" name="product[name]" value="<%= @product.name %>" /><br />
中文名称:<input type="text" name="product[cn_name]" value="<%= @product.cn_name %>" /><br />
价格:<input type="text" name="product[price]" value="<%= @product.price %>" /><br />
市场价:<input type="text" name="product[indication_price]" value="<%= @product.indication_price %>" /><br />
备注:<textarea name="product[memo]"><%= @product.memo %></textarea><br />
状态:<%= select :product, :status, @statuses.map {|s| [ s.name, s.name ] } %><br />
库存数量:<input type="text" name="product[count]" value="<%= @product.count %>" /><br />
已售数量:<input type="text" name="product[sold_count]" value="<%= @product.sold_count %>" /><br />
是否显示:<input type="checkbox" <%= @product.visiable ? "checked" : "" %> value="true" name="product[visiable]" /><br />
<hr />
<% @attributes.each do |attribute| %>
	<%= attribute.name %>:
	<% if attribute.fix %>
		<% allAttr = ProductAttributeValue.where(:short => attribute.short) %>
	
		<% allAttr.each do |value| %>
		<input type="hidden" value="<%= attribute.name %>" name="product_attribute[][name]" />
		<input type="checkbox" name="product_attribute[][value]" <%= @product.has_attribute(attribute.short, value.value) ? "checked" : "" %> value="<%= value.value %>" /><%= value.value %>
		<% end %>
	<br />
	<% else %>
	<input type="hidden" value="<%= attribute.name %>" name="product_attribute[][name]" />
	<input type="text" name="product_attribute[][value]" value="<%= @product.get_attribute_value(attribute.short) %>" /><br />
	<% end %>
	
<% end %>
