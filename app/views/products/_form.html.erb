<table width="100%" cellspacing="0" cellpadding="0" border="0" class="tableinfo">
	<tbody>
		<tr>
		    <td height="30" width="70">图片</td>
		    <td>
				<input type="file" name="product[pic]" />
			<% if @product.pic %>
				<a href="/pics/<%= @product.sku %>/<%= @product.pic %>" target="_blank">查看</a>
			<% end %>
			</td>
		</tr>
		<tr>
		    <td height="30">SKU</td>
		    <td><input type="text" name="product[sku]" value="<%= @product.sku %>" /></td>
		</tr>
		<tr>
		    <td height="30">产品名称</td>
		    <td><input type="text" name="product[name]" value="<%= @product.name %>" /></td>
		</tr>
		<tr>
		    <td height="30">中文名称</td>
		    <td><input type="text" name="product[cn_name]" value="<%= @product.cn_name %>" /></td>
		</tr>
		<tr>
		    <td height="30">价格</td>
		    <td><input type="text" name="product[price]" value="<%= @product.price %>" /></td>
		</tr>
		<tr>
		    <td height="30">市场价</td>
		    <td><input type="text" name="product[indication_price]" value="<%= @product.indication_price %>" /></td>
		</tr>
		<tr>
		    <td height="30">备注</td>
		    <td><textarea name="product[memo]"><%= @product.memo %></textarea></td>
		</tr>
		<tr>
		    <td height="30">状态</td>
		    <td><%= select :product, :status, @statuses.map {|s| [ s.name, s.name ] } %></td>
		</tr>
		<tr>
		    <td height="30">库存</td>
		    <td><input type="text" name="product[count]" value="<%= @product.count %>" /></td>
		</tr>
		<tr>
		    <td height="30">已售</td>
		    <td><input type="text" name="product[sold_count]" value="<%= @product.sold_count %>" /></td>
		</tr>
		<tr>
		    <td height="30">是否显示</td>
		    <td><input type="checkbox" <%= @product.visiable ? "checked" : "" %> value="true" name="product[visiable]" /></td>
		</tr>

		<% @attributes.each do |attribute| %>
		<tr>
			<td height="30"><%= attribute.name %></td>
			<td>
			<% if attribute.fix %>
				<% allAttr = ProductAttributeValue.where(:short => attribute.short) %>
				<% allAttr.each do |value| %>
				<input type="hidden" value="<%= attribute.name %>" name="product_attribute[][name]" />
				<input type="checkbox" name="product_attribute[][value]" <%= @product.has_attribute(attribute.short, value.value) ? "checked" : "" %> value="<%= value.value %>" /><%= value.value %>
				<% end %>
			<% else %>
			<input type="hidden" value="<%= attribute.name %>" name="product_attribute[][name]" />
			<input type="text" name="product_attribute[][value]" value="<%= @product.get_attribute_value(attribute.short) %>" /><br />
			<% end %>
			</td>
		</tr>
		<% end %>
    </tbody>
</table>