<div align="left">
    <div id="indexInfo">
    </div>
    <div class="listwine">
        <div class="left">
            <%= render 'products/listsearch' %>         
            <div class="searchbar">
                找到 &nbsp;&nbsp;<a class="snf3"><span id="goodsTotalNu"><%= @products.total_entries %></span></a>&nbsp;&nbsp;件商品符合您的选择条件<span id="allSeach"></span>
            </div>
            
            <!-- 以下是修改列表方式和分页标签，上半部分 -->
            
            <div class="pailie">
                <table width="349" height="28" border="0" cellpadding="3" cellspacing="0" style="float:left">
                    <tbody>
                        <tr>
                            <td width="68" align="left" valign="middle">
                                显示方式：
                            </td>
                            <td width="42" align="left" valign="middle">
                                <a href="">
                                	<img id="chooseDataSortShow1" src="/images/ico7a.gif">
								                </a>
								                <a href="">
									                <img id="chooseDataSortShow0" src="/images/ico8b.gif" border="0">
								                </a>
                            </td>
                            <td width="40" align="left" valign="middle">
                                排序：
                            </td>
                            <td width="110" align="left" valign="middle">
                                <!-- 这部分改为：价格，销量，两个排序按钮即可；默认为点击数从高到低 -->
                                <select name="select" style="margin-bottom:4px;z-index=1;width:100px;" id="sortSelect" onchange="javascript:document.location.href = this.value;">
                                    <option value="<%= search_path_without_sort %>">默认排序</option>
                                    <option value="<%= search_path_with_sort("price",0) %>" <%= selected("price",0) ? "selected" : "" %>>价格由低到高</option>
									<option value="<%= search_path_with_sort("price",1) %>" <%= selected("price",1) ? "selected" : "" %>>价格由高到低</option>
                                    <option value="<%= search_path_with_sort("sold_count",0) %>" <%= selected("sold_count",0) ? "selected" : "" %>>销量由低到高</option>
                                    <option value="<%= search_path_with_sort("sold_count",1) %>" <%= selected("sold_count",1) ? "selected" : "" %>>销量由高到低</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div id="pagebox2">
                    <div class="page" id="pageInfo1">
                    	<%= will_paginate @products, :params => {:controller => "category", :action => nil }, :inner_window => 1, :outer_window => 0 %>
                    </div>
                </div>
            </div>
            <div class="winebox">
              <%= render @products %>				     
            </div>
            <div id="pagebox2" style="width:700px;">
                <div class="page" id="pageInfo2">
                	<%= will_paginate @products, :params => {:controller => "category", :action => nil }, :inner_window => 1, :outer_window => 0 %>
                </div>
            </div>
        </div>
        
        <div class="right">
          <%= render "products/righttop" %>
          <%= render "products/rank" %>
          <%= render "products/browsehistory" %>

        </div>
