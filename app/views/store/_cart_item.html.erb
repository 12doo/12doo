<li class="item_list">
	<% form_tag :action=>'update_from_cart', :id=>cart_item.product.id do -%>
  <span class="item_name"><%=h cart_item.name %></span>
  <span class="item_price"><%=h cart_item.product.price.to_f %></span>
  <span class="item_quantity"><input type="text" value="<%= cart_item.quantity %>" name="quantity" /></span>
  <span class="item_subtotal"><%=h cart_item.subtotal.to_f %></span>
  <span class="item_update">
				<input type="submit" value="update" />
  </span>
<% end -%>
  <span class="item_delete"><%= button_to "delete", :action=>'delete_from_cart', :id=>cart_item.product.id %></span>
</li>

