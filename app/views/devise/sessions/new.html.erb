<div id="join_now"><img src="/images/login_ljdl.gif" width="379" height="42" /></div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name) + "?return_url=" + request.fullpath, :html => {:method => :post, :name => :new_user}) do |f| %>
<table id="reg_table" border="0" cellspacing="0" cellpadding="0">
	<tr>
    	<td class="tdtitle"><img src="/images/reg_username.gif" width="108" height="19" /></td>
    	<td><label><%= f.text_field :email, :class => :areabox, :id => :loginName %></label></td>
    </tr>
  	<tr>
    	<td><img src="/images/reg_password.gif" width="75" height="19" /></td>
    	<td><%= f.password_field :password, :class => :areabox, :id => :loginPassword %></td>
    </tr>
  	<tr>
    	<td>&nbsp;</td>
    	<td>
			<div id="reg_submit">
				<a href="javascript:document.new_user.submit();">
					<img src="/images/login_btn.gif" width="197" height="53" />
				</a>
				<%= f.check_box :remember_me, :id => :flagLoginSelf %>记住我
			</div>
		</td>
  	</tr>
</table>
<% end %>
<%= link_to "忘记密码?", new_password_path(resource_name) %>
<%= link_to "我要注册", new_registration_path(resource_name) %>
<div class="clearit"></div>
