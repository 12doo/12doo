<script type="text/javascript">
$(document).ready(function(){
	$('#loginPasswordConfirm').keydown(function(e){ 
		if(e.keyCode == 13){ 
			$('#resetpsw').submit();
		} 
	});
	
	$('#loginPassword').keydown(function(e){ 
		if(e.keyCode == 13){ 
			$('#loginPasswordConfirm').focus();
		} 
	});
	
	$('#loginPassword').focus();
	
	$('.message').hide();
});
</script>
<div id="join_now"><img src="/images/changePW_title.gif" /></div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :validate => true, :html => { :method => :put, :id => 'resetpsw' }) do |f| %>
<%= render 'devise/alert' %>
<%= f.hidden_field :reset_password_token %>
  <table id="reg_table" border="0" cellspacing="0" cellpadding="0">
  	<tr>
    	<td><img src="/images/reg_password.gif" /></td>
    	<td><label><%= f.password_field :password, :class => :areabox, :size => '30', :id => :loginPassword %></label><span class="ipterror"></span></td>
    </tr>
  	<tr>
    	<td><img src="/images/reg_password_confirm.gif" /></td>
    	<td><label><%= f.password_field :password_confirmation, :class => :areabox, :size => '30', :id => :loginPasswordConfirm %></label><span class="ipterror"></span></td>
    </tr>
  	<tr>
  	  <td> </td>
    	<td>
			  <div id="reg_submit">
				  <a href="#" onclick="javascript:$('#resetpsw').submit(); return false;">
					  <img src="/images/changePW_btn.gif" width="197" height="53" />
				  </a>
			  </div>
		  </td>
  	</tr>
  </table>
<% end %>

<div class="clearit"></div>