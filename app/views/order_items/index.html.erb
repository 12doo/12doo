<h1>Listing order_items</h1>

<table>
  <tr>
    <th>Order no</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Subtotal</th>
    <th>Product name</th>
    <th>Product sku</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.order_no %></td>
    <td><%= order_item.quantity %></td>
    <td><%= order_item.price %></td>
    <td><%= order_item.subtotal %></td>
    <td><%= order_item.product_name %></td>
    <td><%= order_item.product_sku %></td>
    <td><%= order_item.status %></td>
    <td><%= link_to 'Show', order_item %></td>
    <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
    <td><%= link_to 'Destroy', order_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

