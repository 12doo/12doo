
		<div class="goodsResult">
			
			<ul class="pagePicView">
				<% if @products.length == 0 %>
				<center>没有符合条件的产品.</center>
				<% else %>
				
          <% @products.each_with_index do |item,index| %>
            <li<%= index%4 == 0 ? ' class=one' : '' %>>
              <%= render :partial => "products/product", :object => item %>
          	</li>
          <% end %>
          				
				<% end %>

			</ul>
			<div class="clearit"></div>
			<%= paginate @products %>
    </div>
