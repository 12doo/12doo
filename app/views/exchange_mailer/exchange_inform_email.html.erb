		<% @exchange.tickets.each do |item| %>
		<tr>
			<td height="30" align="center"><%= item.code %></td>
			<td align="center"><%= item.product.sku %></td>
			<td align="center"><%= item.product.cn_name %></td>
			<td align="center">1</td>
		</tr>
		<% end %>
	</tbody>
