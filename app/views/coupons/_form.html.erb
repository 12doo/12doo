		    <td height="30">属于</td>
		    <td><input type="text" name="coupon[belongs_to]" value="<%= @coupon.belongs_to %>" /></td>
		</tr>
		<tr>
		    <td height="30">所有人可用</td>
		    <td><input type="text" name="coupon[all_user]" value="<%= @coupon.all_user %>" /></td>
		</tr>
		<tr>
		    <td height="30">一次性</td>
		    <td><input type="text" name="coupon[one_off]" value="<%= @coupon.one_off %>" /></td>
		</tr>
		<tr>
		    <td height="30">启用时间</td>
		    <td><input type="text" name="coupon[begin]" value="<%= @coupon.begin %>" /></td>
		</tr>
		<tr>
		    <td height="30">结束时间</td>
		    <td><input type="text" name="coupon[end]" value="<%= @coupon.end %>" /></td>
		</tr>
    </tbody>
