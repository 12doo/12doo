<%= render 'admin/header' %>
<div id="my_acinfo">
<%= render 'admin/userside' %>
	<div id="ac_right">
		<ul id="pd_infomenu">
			<li><%= link_to "所有属性", product_attribute_defines_path %></li>
			<li><%= link_to "添加属性", new_product_attribute_define_path %></li>
			<li class="on">编辑属性值</li>
		</ul>
		<div class="clearit"></div>
		<div id="ac_more_detail">
			<table width="100%" cellspacing="0" cellpadding="0" border="0" class="tableinfoL">
				<tbody>
					<tr>
					    <td height="30" width="100" class="tcenter">名称</td>
					    <td><%= @product_attribute_define.name %></td>
					</tr>
					<tr>
					    <td height="30" class="tcenter">缩写</td>
					    <td><%= @product_attribute_define.short %></td>
					</tr>
					<tr>
					    <td height="30" class="tcenter">简单说明</td>
					    <td><%= @product_attribute_define.description %></td>
					</tr>
					<tr>
					    <td height="30" class="tcenter">多个值</td>
					    <td><%= @product_attribute_define.multiple ? "是" : "否" %></td>
					</tr>
					<tr>
					    <td height="30" class="tcenter">可以搜索</td>
					    <td><%= @product_attribute_define.search ? "是" : "否" %></td>
					</tr>
					<tr>
					    <td height="30" class="tcenter">固定值</td>
					    <td><%= @product_attribute_define.fix ? "是" : "否" %></td>
					</tr>
			    </tbody>
			</table>
			<div class="bj-sp10"></div>
			<% @product_attribute_define.values.each do |item| %>
				<%= form_for item, :url => { :action => :update, :id => item.id, :define_id => params[:define_id] }, :html => { :id => "product_attribute_value_form_" + item.id.to_s } do |f| %>
			    <table width="100%" cellspacing="0" cellpadding="0" border="0" class="tableinfoL">
					<tbody>
						<tr>
				 	   		<td height="30" class="tcenter">顺序:</td>
							<td><%= f.text_field :sort %></td>
							<td class="tcenter">值:</td>
							<td><%= f.text_field :value %></td>
							<td class="tcenter">
								<a href="javascript:$('#product_attribute_value_form_<%= item.id.to_s %>').submit();" class='f-red-12'>[保存]</a>
							</td>
						</tr>
					</tbody>
			    </table>	
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<div class="clearit"></div>